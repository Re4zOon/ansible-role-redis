# {{ ansible_managed }}

daemonize yes
pidfile /var/run/sentinel/{{ sentinel_daemon }}.pid
logfile {{ sentinel_logfile }}

port {{ sentinel_port }}
bind {{ redis_bind_interface }}

dir "{{ redis_dbdir }}"
{% if redis_master %}
sentinel monitor mymaster {{ redis_master }} {{ redis_port }} {{ redis_quorum }}
{% endif %}
sentinel deny-scripts-reconfig yes
sentinel config-epoch mymaster 0
sentinel leader-epoch mymaster 0

sentinel down-after-milliseconds mymaster {{ sentinel_timeout }}
sentinel failover-timeout mymaster {{ failover_timeout }}
